<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ATTACKER SECTION (Top Half - Red) -->
    <LinearLayout
        android:id="@+id/attackerSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#C62828"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/middleSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/attackerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attacker"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/attackerDiceSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/attacker1Btn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/one_die"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:backgroundTint="#B71C1C" />

            <Button
                android:id="@+id/attacker2Btn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/two_dice"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:backgroundTint="#B71C1C" />

            <Button
                android:id="@+id/attacker3Btn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/three_dice"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:backgroundTint="#B71C1C" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attackerDiceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/attackerDice1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dice1"
                android:contentDescription="@string/attacker_die_1"
                android:layout_margin="6dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/attackerDice2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dice1"
                android:contentDescription="@string/attacker_die_2"
                android:layout_margin="6dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/attackerDice3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dice1"
                android:contentDescription="@string/attacker_die_3"
                android:layout_margin="6dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!-- MIDDLE SECTION (Battle Button & Results) -->
    <LinearLayout
        android:id="@+id/middleSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB300"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/battleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battle"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="56dp"
            android:paddingEnd="56dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:backgroundTint="#F57C00" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/casualtiesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/casualties_initial"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/reset"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:backgroundTint="#757575"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/historyButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/history"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:backgroundTint="#757575" />
        </LinearLayout>

    </LinearLayout>

    <!-- DEFENDER SECTION (Bottom Half - Blue) -->
    <LinearLayout
        android:id="@+id/defenderSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#1565C0"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/middleSection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/defenderDiceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/defenderDice1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dice1"
                android:contentDescription="@string/defender_die_1"
                android:layout_margin="6dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/defenderDice2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dice1"
                android:contentDescription="@string/defender_die_2"
                android:layout_margin="6dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/defenderDiceSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/defender1Btn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/one_die"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:backgroundTint="#0D47A1" />

            <Button
                android:id="@+id/defender2Btn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="@string/two_dice"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                android:backgroundTint="#0D47A1" />
        </LinearLayout>

        <TextView
            android:id="@+id/defenderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defender"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- History Overlay (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/historyOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DD000000"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battle_history"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="12dp">

            <TextView
                android:id="@+id/historyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_battles_yet"
                android:textSize="14sp"
                android:textColor="#000000"
                android:lineSpacingExtra="4dp" />
        </ScrollView>

        <Button
            android:id="@+id/closeHistoryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/close"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#757575" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
